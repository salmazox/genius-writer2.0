# Genius Writer 2.0 - Environment Configuration
# Copy this file to .env.local for local development

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================

# Google Gemini API Key
# Get your API key from: https://aistudio.google.com/app/apikey
# REQUIRED for AI content generation features
# WARNING: In production, this should NEVER be exposed client-side
#          Implement a backend proxy to handle API calls securely
API_KEY=your_gemini_api_key_here

# =============================================================================
# BACKEND CONFIGURATION
# =============================================================================

# Backend API URL
# Production: Railway deployment URL
# Development: Local backend server
# IMPORTANT: This is used by the frontend to connect to the backend API
VITE_API_URL=https://genius-writer.up.railway.app
# For local development:
# VITE_API_URL=http://localhost:3000

# Node Environment (Backend)
# Options: development, production, test
NODE_ENV=development

# Server Port (Backend)
PORT=3000

# Database Connection String (Backend)
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
# DATABASE_URL=postgresql://postgres:password@localhost:5432/genius_writer

# JWT Secret for Authentication (Backend)
# Generate a strong random secret: openssl rand -base64 32
# JWT_SECRET=your_jwt_secret_here

# =============================================================================
# STRIPE PAYMENT CONFIGURATION
# =============================================================================

# Stripe Secret Key (Backend)
# Get from: https://dashboard.stripe.com/apikeys
# STRIPE_SECRET_KEY=sk_test_...

# Stripe Webhook Secret
# Get from: https://dashboard.stripe.com/webhooks
# Used to verify webhook signatures
# STRIPE_WEBHOOK_SECRET=whsec_...

# Stripe Public Key (Frontend)
# VITE_STRIPE_PUBLIC_KEY=pk_test_...

# =============================================================================
# OPTIONAL: ERROR TRACKING & MONITORING
# =============================================================================

# Sentry DSN for error tracking
# Get from: https://sentry.io/settings/projects/
# VITE_SENTRY_DSN=https://...@sentry.io/...

# Google Analytics Measurement ID
# VITE_GA_MEASUREMENT_ID=G-...

# =============================================================================
# OPTIONAL: FEATURE FLAGS
# =============================================================================

# Enable/disable features
# VITE_ENABLE_ANALYTICS=false
# VITE_ENABLE_ERROR_TRACKING=false
# VITE_MAINTENANCE_MODE=false
